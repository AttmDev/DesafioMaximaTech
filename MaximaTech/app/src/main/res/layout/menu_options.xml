<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/it_menu"
    android:layout_margin="10dp"
    android:elevation="5dp"
    app:cardCornerRadius="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="163.88dp"
    android:layout_height="163.88dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/it_menu_img"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/ic_maxima_pessoas"
            android:layout_gravity="center"
            android:contentDescription="@string/cd_menu_option_icon"/>
        <TextView
            android:id="@+id/it_menu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:text="Clientes"
            android:fontFamily="@font/santral_bold"
            android:textColor="@color/textoBotoesMenu"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>